<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <GridLayout
        android:id="@+id/grillecouleur"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_gravity="center_horizontal"
        android:columnCount="3" >

        <FrameLayout
            android:id="@+id/case1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/rouge" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/case2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/bleu" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/case3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/vert" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/case4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/jaune" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/case5"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/noir" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/case6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/turquoise" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/case7"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/orange" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/case8"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/violet" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/case9"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@color/rose" >
        </FrameLayout>
    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.73" >

        <TextView
            android:id="@+id/nbpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nbpoints"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/couleur1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:layout_marginLeft="5dp"
            	android:layout_marginRight="5dp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/couleur2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:layout_marginLeft="5dp"
            	android:layout_marginRight="5dp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/couleur3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:layout_marginLeft="5dp"
            	android:layout_marginRight="5dp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/couleur4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"     
            	android:layout_marginLeft="5dp"
            	android:layout_marginRight="5dp"
                android:textSize="25sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>